
<div class="ui page grid">
  <div class="column">

    <div class="ui top attached header">
      <h2>Create a Flow</h2>
    </div>
    <%= form_tag(method: :post, class: 'ui form') do %>
      <div class="ui attached segment">
        <div class="ui required field">
          <textarea style="width: 100%; height: 400px; font-family: Courier New, mono;" name="json" required><%= @flow_json || @flow.send(:serialize) %></textarea>
        </div>
      </div>
      <div class="ui bottom attached segment right aligned">
        <button type="submit" class="ui button green right labeled icon">
          Create Flow
          <i class="save icon"></i>
        </button>
      </div>
    <% end %>
  </div>
</div>
